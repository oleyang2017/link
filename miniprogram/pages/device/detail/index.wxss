.device-detail-container{
  display: flex;
  flex-direction: column;
  max-height: 280rpx;
  overflow-y: hidden;
}
.show-all{
  max-height: 100%;
}
.device-detail-container .top-container{
  padding :20rpx;
  display: flex;
}

.device-detail-container .top-container .right{
  width: 90%;
  padding-left: 20rpx;
  align-content:space-around;
  align-items: stretch;
}

.device-detail-container .top-container .right .icon{
  font-size: 32rpx;
}
.device-detail-container .bottom-container{
  width: 100%;
}
.chart-container{
  display: flex;
  flex-wrap: wrap;
}
.chart-box{
  width: 46%;
  height: 400rpx;
  margin: 2%;
}
.show-more-btn{
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  box-shadow: 0 1rpx 6rpx -3rpx rgba(26, 26, 26, 0.2);
}
.settings{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.tabs-container{
  padding: 10px;
  min-height: calc(100vh - 230px);
}
.image{
  width: 200rpx;
  height: 200rpx;
}