.container {
  --tabs-nav-background-color: #f6f8fa;
  min-height: 100vh;
  position: relative;
}
.title {
  display: inline-block;
  font-weight: 700;
  font-size: 40rpx;
  line-height: 80rpx;
  padding: 0 10px;
}
.refresh-ani{
  -webkit-animation: load-progress-spinner 0.6s linear infinite;
  animation: load-progress-spinner 0.6s linear infinite;
}
.body {
  min-height: calc(100vh -80rpx);
  padding: 0 10px;
}
.van-tabs__wrap{
  width: 90%;
}
.van-tabs__wrap--scrollable .van-tabs__nav--complete{
  padding-left: 0 !important;
}
.category-tab-active-class{
  padding: 0 16px 0 0!important;
}
.category-tab-class{
  padding: 0 16px 0 0!important;
}
.category-icon-container{
  position: absolute;
  display: inline-block;
  width: 10%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.bars-icon{
  display: inline-block;
  background-color: #d8d9da;
  color: #98999a;
  border-radius: 16rpx;
  padding: 4rpx 14rpx;
}
.category-popup{
  background-color: #f6f8fa;
  width: 300rpx;
  max-height: 800rpx;
  border-radius: 18rpx;
  padding: 20rpx;
  position: absolute;
  top: 100rpx;
  right: 30rpx;
}
.category-popup .category-item{
  padding: 16rpx 10rpx;
  position: relative;
}
.category-popup .category-item .name{
  display: inline-block;
}
.category-popup .category-item .count{
  display: inline-block;
  color: #98999a;
  right: 10rpx;
  text-align: center;
  line-height: 20px;
  position: absolute;
}
.device-scroll-container{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 80px;
}
.device-scroll-container .card-container {
  width: 48%;
  display: inline-block;
  vertical-align: top;
  margin-bottom: 40rpx;
  padding: 20rpx;
  height: 180rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 14rpx -8rpx #888888;
  position: relative;
}
.device-scroll-container .card-container .name{
  display: inline-block;
  font-size: 30rpx;
  padding-bottom: 10rpx;
  max-width: 70%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.device-scroll-container .card-container .last-value{
  display: inline-block;
  font-size: 30rpx;
  padding-bottom: 10rpx;
  max-width: 20%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.device-scroll-container .card-container .tag{
  display: inline-block;
  position: absolute;
  padding: 4rpx 8rpx;
  /* background-color: #ecedef; */
  /* color: #aeaeae; */
  border-radius: 4rpx;
  font-size: 20rpx;
  right: 20rpx;
  max-width: 94rpx;
  overflow: hidden;
  white-space: nowrap;
}
.device-scroll-container .card-container .status{
  font-size: 20rpx;
  padding-bottom: 10rpx;
  display: inline-block;
}
.device-scroll-container .card-container .pic{
  height: 48rpx;
  max-width: 96rpx;
}
.device-scroll-container .card-container .show-data{
  position: absolute;
  font-size: 28rpx;
  right: 20rpx;
  bottom: 16rpx;
}
.head-icon{
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
}