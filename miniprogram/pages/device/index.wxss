.container {
  --tabs-nav-background-color: #f6f8fa;
  min-height: 100vh;
  position: relative;
}
.title {
  display: inline-block;
  font-weight: 700;
  font-size: 60rpx;
  line-height: 120rpx;
  padding: 0 10px;
}
.refresh-ani{
  -webkit-animation: load-progress-spinner 0.6s linear infinite;
  animation: load-progress-spinner 0.6s linear infinite;
}
.body {
  min-height: calc(100vh -80rpx);
  padding: 0 10px;
}
.van-tabs__wrap{
  width: 90%;
}
.van-tabs__wrap--scrollable .van-tabs__nav--complete{
  padding-left: 0 !important;
}
.category-tab-active-class{
  padding: 0 16px 0 0!important;
  font-size: 60rpx !important;
}
.category-tab-class{
  padding: 0 16px 0 0!important;
  font-size: 60rpx !important;
}
.category-icon-container{
  position: absolute;
  display: inline-block;
  width: 10%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.bars-icon{
  display: inline-block;
  background-color: #d8d9da;
  color: #98999a;
  border-radius: 16rpx;
  padding: 4rpx 14rpx;
}
.category-popup{
  background-color: #f6f8fa;
  width: 300rpx;
  max-height: 800rpx;
  border-radius: 18rpx;
  padding: 20rpx;
  position: absolute;
  top: 140rpx;
  right: 30rpx;
}
.category-popup .category-item{
  padding: 16rpx 10rpx;
  position: relative;
}
.category-popup .category-item .name{
  display: inline-block;
}
.category-popup .category-item .count{
  display: inline-block;
  color: #98999a;
  right: 0;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
}
