.stream-list-container {
  display: flex;
  flex-flow: column;
  margin: 40px 0;
}

.tip {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #f6f8fa;
}

.stream-list-container .delete {
  line-height: 50px;
  font-size: 14px;
  width: 60px;
  height: 50px;
  text-align: center;
}

.dialog-title {
  font-size: 16px;
  margin: 20px 0;
  text-align: center;
}

.dialog-input {
  border: 1px solid #f1f1f1;
  font-size: 12px;
  padding-left: 5px;
  margin: 10px;
  height: 30px;
  border-radius: 5px;
}

.empty-bottom {
  padding-bottom: 40px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 111;
  background-color: #f6f8fa;
}

.item-container {
  padding: 15px;
  color: #333333;
  position: relative;
}

.item-container .icon {
  margin-top: 3px;
  text-align: center;
  float: right;
}

.delete {
  line-height: 50px;
  font-size: 14px;
  width: 60px;
  height: 50px;
  text-align: center;
  background-color: #e54d42;
  color: #ffffff;
}